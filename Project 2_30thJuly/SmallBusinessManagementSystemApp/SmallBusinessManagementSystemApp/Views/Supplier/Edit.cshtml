@model SmallBusinessManagementSystemApp.Models.Models.Supplier

@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
        Supplier Form
    </title>
    <style>
        #header {
            height: 50px;
            background-color: burlywood;
            font-size: xx-large;
            text-align: center;
        }

        #menuBar {
            background-color: beige;
        }

        #leftSidebar {
            background-color: lightblue;
            width: 25%;
            float: left;
        }

        #mainContent {
            background-color: aliceblue;
            width: 50%;
            float: left;
        }

        #rightSidebar {
            background-color: lightblue;
            width: 25%;
            float: left;
        }

        #footer {
            height: 10px;
            width: 100%;
            bottom: 0px;
            background-color: burlywood;
            color: azure;
            text-align: center;
        }
    </style>
    <link href="../Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-md" id="header">
                    Supplier Form
                </div>
            </div>
            <div class="row" id="menuBar">
                <div class="col">

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-md-1" id="leftSidebar">

                        </div>
                        <div class="col-10" id="mainContent">
                            <div class="row"></div>
                            <div class="col">

                                <form method="post">
                                    <input type="hidden" name="ID" value="@Model.ID"/>
                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="code" style="padding:10px">Code</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="code" name="Code" value="@Model.Code">
                                        </div>

                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="name" style="padding:10px">Name</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="address" style="padding:10px">Address</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="address" name="Address" value="@Model.Address">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="email" style="padding:10px">Email</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="email" name="Email" value="@Model.Email">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="contact" style="padding:10px">Contact</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="contact" name="Contact" value="@Model.Contact">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="contactPerson" style="padding:10px">Contact Person</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="contactPerson" name="ContactPerson" value="@Model.ContactPerson">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">


                                        </div>
                                        <div class="form-group col-md-3">
                                            <input type="submit" class="form-control" id="contactPerson" name="save">

                                        </div>

                                        <div class="form-group col-md-3">


                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                        <div class="col-1" id="rightSidebar">

                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col jumbotron" id="footer">

                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>

    </script>
</body>
</html>
