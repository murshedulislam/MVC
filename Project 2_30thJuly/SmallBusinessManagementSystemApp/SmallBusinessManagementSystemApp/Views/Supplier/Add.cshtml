
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>
        Supplier Form
    </title>
    <style>
        #header {
            height: 50px;
            background-color: burlywood;
            font-size: xx-large;
            text-align: center;
        }

        #menuBar {
            background-color: beige;
        }

        #leftSidebar {
            background-color: lightblue;
            width: 25%;
            float: left;
        }

        #mainContent {
            background-color: aliceblue;
            width: 50%;
            float: left;
        }

        #rightSidebar {
            background-color: lightblue;
            width: 25%;
            float: left;
        }

        #footer {
            height: 10px;
            width: 100%;
            bottom: 0px;
            background-color: burlywood;
            color: azure;
            text-align: center;
        }
    </style>
    <link href="../Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-md" id="header">
                    Supplier Form
                </div>
            </div>
            <div class="row" id="menuBar">
                <div class="col">

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-md-1" id="leftSidebar">

                        </div>
                        <div class="col-10" id="mainContent">
                            <div class="row"></div>
                            <div class="col">

                                <form method="post">
                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            @*<label for="code" style="padding:10px">Code</label>*@
                                            @Html.Label("Code")

                                        </div>
                                        <div class="form-group col-md-4">

                                            @*<input type="text" class="form-control" id="code" placeholder="Enter Code" name="Code">*@e
                                            @Html.TextBox("Code", null, htmlAttributes: new { @class = "form-control", placeholder = "Enter Code"})
                                        </div>
                                        
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="name" style="padding:10px">Name</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="name" placeholder="Enter Name" name="Name">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="address" style="padding:10px">Address</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="address" placeholder="Enter Address" name="Address">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="email" style="padding:10px">Email</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="email" placeholder="Enter Email" name="Email">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="contact" style="padding:10px">Contact</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="contact" placeholder="Enter Contact" name="Contact">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-1">


                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="contactPerson" style="padding:10px">Contact Person</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="contactPerson" placeholder="Enter Contact Person" name="ContactPerson">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">


                                        </div>
                                        <div class="form-group col-md-3">
                                            <input type="submit" class="form-control" id="contactPerson" name="save">

                                        </div>

                                        <div class="form-group col-md-3">

                                            
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                        <div class="col-1" id="rightSidebar">

                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col jumbotron" id="footer">

                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        
    </script>
</body>
</html>
