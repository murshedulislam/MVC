@model SmallBusinessManagementSystemApp.Models.Models.Supplier
@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
        Supplier Form
    </title>
    <style>
        #header {
            height: 50px;
            background-color: burlywood;
            font-size: xx-large;
            text-align: center;
        }

        #menuBar {
            background-color: beige;
        }

        #leftSidebar {
            background-color: lightblue;
            width: 25%;
            float: left;
        }

        #mainContent {
            background-color: aliceblue;
            width: 50%;
            float: left;
        }

        #rightSidebar {
            background-color: lightblue;
            width: 25%;
            float: left;
        }

        #footer {
            height: 10px;
            width: 100%;
            bottom: 0px;
            background-color: burlywood;
            color: azure;
            text-align: center;
        }
    </style>
    <link href="../Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-md" id="header">
                    Supplier Form
                </div>
            </div>
            <div class="row" id="menuBar">
                <div class="col">

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-md-1" id="leftSidebar">

                        </div>
                        <div class="col-10" id="mainContent">
                            <div class="row"></div>
                            <div class="col">

                                <form method="post">
                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="code" style="padding:10px">Code</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="code" placeholder="Enter Code" name="Code" value="@Model.Code">
                                        </div>

                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="name" style="padding:10px">Name</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="name" placeholder="Enter Name" name="Name" value ="@Model.Name">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="address" style="padding:10px">Address</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="address" placeholder="Enter Address" name="Address" value ="@Model.Address">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="email" style="padding:10px">Email</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="email" placeholder="Enter Email" name="Email"value ="@Model.Email" >
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="contact" style="padding:10px">Contact</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="contact" placeholder="Enter Contact" name="Contact" value ="@Model.Contact">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-1">


                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="contactPerson" style="padding:10px">Contact Person</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="contactPerson" placeholder="Enter Contact Person" name="ContactPerson" value ="@Model.ContactPerson">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">


                                        </div>
                                        <div class="form-group col-md-3">
                                            <input type="submit" class="form-control" id="contactPerson" name="search" value="Search">

                                        </div>

                                        <div class="form-group col-md-3">


                                        </div>
                                    </div>
                                    
                                </form>
                                <div class="row">
                                    <div class="col">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">SL</th>
                                                    <th scope="col">Code</th>
                                                    <th scope="col">Name</th>

                                                    <th scope="col">Email</th>
                                                    <th scope="col">Contact</th>
                                                    <th scope="col">Contact Person</th>
                                                    <th scope="col">Address</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @{ int sl = 1;}
                                            @foreach (var supplier in Model.Suppliers)
                                            {
                                                <tr>
                                                    <th scope="row">@(sl++)</th>
                                                    <td>@supplier.Code</td>
                                                    <td>@supplier.Name</td>
                                                    <td>@supplier.Email</td>
                                                    <td>@supplier.Contact</td>
                                                    <td>@supplier.ContactPerson</td>
                                                    <td>@supplier.Address</td>
                                                </tr>
                                            }

                                            </tbody>
                                            
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-1" id="rightSidebar">

                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col jumbotron" id="footer">

                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>

    </script>
</body>
</html>
