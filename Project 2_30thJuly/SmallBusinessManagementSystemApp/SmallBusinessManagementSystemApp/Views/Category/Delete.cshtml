
@model SmallBusinessManagementSystemApp.Models.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>
        Supplier Form
    </title>
    <style>
        #header {
            height: 50px;
            background-color: burlywood;
            font-size: xx-large;
            text-align: center;
        }

        #menuBar {
            background-color: beige;
        }

        #leftSidebar {
            background-color: lightblue;
            width: 25%;
            float: left;
        }

        #mainContent {
            background-color: aliceblue;
            width: 50%;
            float: left;
        }

        #rightSidebar {
            background-color: lightblue;
            width: 25%;
            float: left;
        }

        #footer {
            height: 10px;
            width: 100%;
            bottom: 0px;
            background-color: burlywood;
            color: azure;
            text-align: center;
        }
    </style>
    <link href="../Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-md" id="header">
                    Category Form
                </div>
            </div>
            <div class="row" id="menuBar">
                <div class="col">

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-md-1" id="leftSidebar">

                        </div>
                        <div class="col-10" id="mainContent">
                            <div class="row"></div>
                            <div class="col">

                                <form method="post">
                                    <input type="hidden" name="ID" value="@Model.ID" />
                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="code" style="padding:10px">Code</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="code" placeholder="Enter Code" name="Code" value="@Model.Code">
                                        </div>
                                        <div class="form-group col-md-4">

                                            <label id="codeError" style="padding:10px;color:red"></label>
                                        </div>


                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-2">


                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="name" style="padding:10px">Name</label>

                                        </div>
                                        <div class="form-group col-md-4">

                                            <input type="text" class="form-control" id="name" placeholder="Enter Name" name="Name" value="@Model.Name">
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-6">


                                        </div>
                                        <div class="form-group col-md-3">
                                            <input type="submit" class="form-control" id="btnSubmit" name="save" value="Delete">

                                        </div>

                                        <div class="form-group col-md-3">


                                        </div>
                                    </div>
                                    @*<div class="form-row">
                                            <div class="col">

                                            </div>
                                        </div>*@
                                </form>

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">SL</th>
                                            <th scope="col">Code</th>
                                            <th scope="col">Name</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int sl = 1;}
                                        @foreach (var category in Model.Categories)
                                        {
                                            <tr>
                                                <th scope="row">@(sl++)</th>
                                                <td>@category.Code</td>
                                                <td>@category.Name</td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { @Id = Model.ID }) -
                                                    @Html.ActionLink("Delete", "Delete", new { @Id = Model.ID })
                                                </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <div class="col-1" id="rightSidebar">

                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col jumbotron" id="footer">

                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#btnSubmit').click(function () {
                if ($('#code').val == "") {
                    $('#codeError').val = "Code Field is empty.";
                }

            });

            $('#code').click(function () {
                $('#codeError').text == "";
            });
        });
    </script>
</body>
</html>
